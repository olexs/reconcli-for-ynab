{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "es2015", "dom"],
    "sourceMap": false,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "./src/**/*.spec.ts",
    "./src/**/__mocks__/**/*.ts",
    "node_modules",
    "dist"
  ]
}